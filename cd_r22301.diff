+		if (this->IsWidgetDisabled(c + LGL_COMPANY_FIRST)) continue;
+		if (!this->IsWidgetLowered(c + LGL_COMPANY_FIRST)) continue;
+		SetBit(mask, c);
+	}
+	this->overlay->SetCompanyMask(mask);
