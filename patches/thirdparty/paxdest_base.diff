+	const Station *a = GetStation(ril.dest_id);
+	RoutingInformationGroup::List::iterator it, end = list.end();
+	for (it = list.begin(); it != end; ++it) {
+		if ( ! IsValidStationID(it->dest_id)) continue;
+		const Station *b = GetStation(it->dest_id);
+		if (StationNameSorter(a, b) < 0) { // sort key
